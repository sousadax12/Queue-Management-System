rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to access all documents in the database
    match /{document=**} {
      // Allow read if user is authenticated (including anonymous users)
      allow read: if request.auth != null;

      // Allow write if user is authenticated (including anonymous users)
      allow write: if request.auth != null;
    }
  }
}
